{
  "compilerOptions": {
    "target": "ES2020",                        // Use the latest ECMAScript target
    "module": "Node16",                      // CommonJS for Node.js compatibility
    "lib": ["dom", "es2020"],                  // Latest library definitions
    "allowSyntheticDefaultImports": true,      // Allow synthetic default imports
    "esModuleInterop": true,                   // Enable compatibility between ES modules and CommonJS
    "skipLibCheck": true,                      // Skip type checking of declaration files
    "strict": true,                            // Enable all strict type-checking options
    "forceConsistentCasingInFileNames": true,  // Ensure file names are case-consistent
    "jsx": "react",                            // JSX support for React
    "declaration": true,                       // Generate declaration files
    "outDir": "./dist",                        // Output directory for compiled files
    "rootDir": "./src",                        // Root directory of source files
    "moduleResolution": "node16",              // Use Node.js 16 module resolution strategy
    "resolveJsonModule": true,                 // Allow importing JSON modules
    "isolatedModules": true,                   // Ensure each file can be safely transpiled without relying on other files
    "noEmit": false                            // Do not emit outputs
  },
  "include": ["src"],                          // Include source files
  "exclude": ["node_modules", "dist"]          // Exclude node_modules and dist directories
}
